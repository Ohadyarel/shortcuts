<%= form_for @user do |f| %>
		<%=f.label :username %><br>
		<%=f.text_field :username %><br><br>

		<%=f.label :password %><br>
		<%=f.password_field :password %><br><br>

		<%= f.label :password_confirmation %>
		<%=f.password_field :password_confirmation %>

		<%=f.label :email %><br>
		<%=f.text_field :email %><br><br>

		<%=f.submit %>
	<% end %>