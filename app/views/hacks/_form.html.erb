<!-- form to create / edit a hack -->
<%= form_for @hack do |f| %>
	<%=f.label :title %><br>
	<%=f.text_field :title %><br><br>
	<%=f.label 'Image' %><br>
	<%= f.file_field :lhimg %><br><br>
	<%=f.label :body %><br>
	<%=f.text_field :body %><br><br>
	<%= f.hidden_field :user_id, value:current_user.id%>

	<!-- capture the tag -->
	<input type="text" id="tag" placeholder="input tags"> 
	<div type="submit" id="submit-tag">submit</div>
	<%= f.hidden_field :tags, id:"tag-array"%>
	<br>
	<div id="tags">
		<%if @tags%>
			<%@tags.each do |tag|%>
				<p id="cloud"><%=tag.category%><%=link_to "X", hack_tag_path(tag.id, hack_id:@hack.id), method: :delete%></p>
			<%end%>
		<%end%>
	</div>
	<%=f.submit %>
<% end %>