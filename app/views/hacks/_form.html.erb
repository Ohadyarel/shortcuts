<!-- form to create / edit a hack -->
<%= form_for @hack do |f| %>
	<%=f.label :title %><br>
	<%=f.text_field :title %><br><br>
	<%=f.label 'Image' %><br>
	<%= f.file_field :lhimg %><br><br>
	<%=f.label :body %><br>
	<%=f.text_field :body %><br><br>
	<%= f.hidden_field :user_id, value:current_user.id%>
	<%=f.submit %>
<% end %>

<!-- form to add a category tag to a hack -->
<%= form_for @tag, url: tags_path do |f| %>
	<%=f.label :category %><br>
	<%=f.text_field :category %><br><br>
	<%=f.submit %>
<% end %>