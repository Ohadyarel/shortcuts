<%if current_user%>
	<!-- path to clear session needs to be edited -->
	<%=link_to "Log Out", session_path(current_user.id)%>
	
	<!-- Listing of all the lifehacks in the database -->
	<h1>Index</h1>
	<% @hacks.each do |hack| %>
			<h3><%=hack.title%></h3>
			<%= image_tag hack.lhimg.url(:medium) %>
			<p><%=hack.body%></p>
		<% end %>
<%else%>
	<!-- login -->
	<h1>Log In</h1>
		<div class="info-form">
			<%=form_tag sessions_path do%>

				<%=label_tag :username %>
				<%=text_field_tag :username, nil, :placeholder=>"Username" %><br>

				<%=label_tag :password %>
				<%=password_field_tag :password, nil, :placeholder=> "Password" %><br>

				<%=submit_tag "Log in" %><br>
			<%end%>
		</div>
<%end%>
